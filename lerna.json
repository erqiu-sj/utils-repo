{
  "packages": ["packages/*", "project/*", "template/*"],
  "version": "independent",
  "npmClient": "yarn",
  "ignoreChanges": [
    "ignored-file",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "registry": "http://localhost:4873"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "useWorkspaces": true
}
